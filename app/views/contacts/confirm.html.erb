<div class="container">
    <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
        <h1>以下の内容で、送信する。</h1>

        <%=form_for(@contact) do |contact| %>
            <%= contact.hidden_field :name %>
            <%= contact.hidden_field :email %>
            <%= contact.hidden_field :content %>

            <p>名前：<%= @contact.name %></p>
            <p>メールアドレス：<%= @contact.email %></p>
            <p>お問い合わせ内容：<%= @contact.content %></p>

            <%=contact.submit "送信", class:'btn btn-primary btn-block' %>
        <% end %>

        <%=form_for(@contact, url: new_contact_path, method:'get') do |contact| %>
            <%= contact.hidden_field :name %>
            <%= contact.hidden_field :email %>
            <%= contact.hidden_field :content %>

            <%=contact.submit "もどる", name:'back', class:'btn btn-default btn-block' %>
        <% end %>
    </div>
</div>
