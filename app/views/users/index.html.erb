<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
    <div class="row">
      <div class="container-child col-md-2 col-sm-4 col-xs-6">
        <div class="users">
          <div class="left">
            <%= profile_img(user) %>

            <%= link_to user_path(user) do %>
              <h4><strong><%= user.email %></strong></h4>
            <% end %>
          </div>
        </div>
      </div>
      <div class="right"><%= render 'follow_form', user: user %></div>
    </div>
  <% end %>
</div>
